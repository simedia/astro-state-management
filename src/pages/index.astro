---
import { session_get } from "@src/session.ts";

const sessionID = Astro.cookies.get('sessionASTRO')?.value! ?? null;
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>Astro</title>
    </head>
    <body>
        <h1>State management with cookie</h1>
        <h2>My session cookie is {sessionID}</h2>

        <p>
            <div>
                {!session_get('who') && <a href="/auth/login">Sign in</a>}
            </div>
            <div>
                {session_get('who') && <a href="/auth/logout">Sign out</a>}
            </div>
        </p>

        <p>
            <a href="/demo">Check demo page</a>
        </p>
    </body>
</html>
